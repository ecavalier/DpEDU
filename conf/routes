# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                       controllers.Application.index
GET         /login                                  controllers.Login.login
GET         /admin/profile                          controllers.Login.authenticate


GET         /dean/lookAndFeel                       controllers.Dean.openLookAndFeel()
GET         /dean/departments                       controllers.Dean.departmentList
POST        /dean/departments/insert                controllers.Dean.insertDepartment
GET         /dean/departments/remove/:id            controllers.Dean.deleteDepartment(id)
GET         /dean/departments/deatils/:id           controllers.Dean.detailsDepartment(id)
POST        /dean/departments/addManager/:id        controllers.Dean.addManager(id)
GET        /dean/theme/:theme                      controllers.Dean.changeTheme(theme)
GET         /dean/profile/:id                             controllers.Dean.profileInit(id)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.at(path="/public", file)

