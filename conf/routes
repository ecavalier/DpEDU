# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                                controllers.Application.index
GET         /login                                                           controllers.LoginController.login
GET         /logout                                                          controllers.LoginController.logOut

#Dean Section###################################################################################################
GET         /dean/departments                                                controllers.dean.DepartmentController.departmentList()
POST        /dean/departments/insert                                         controllers.dean.DepartmentController.insertDepartment()
GET         /dean/departments/remove/:id                                     controllers.dean.DepartmentController.deleteDepartment(id)
GET         /dean/departments/update/:id                                     controllers.dean.DepartmentController.saveDepartment(id)
GET         /dean/departments/updateDepartmentForm/:id                       controllers.dean.DepartmentController.getDepartmentEditForm(id)
GET         /dean/departments/updateManagerForm/:id                          controllers.dean.DepartmentController.getManagerEditForm(id)
POST        /dean/departments/saveManager/:id                                controllers.dean.DepartmentController.saveManager(id)
GET         /dean/departments/deatils/:id                                    controllers.dean.DepartmentController.detailsDepartment(id)
POST        /dean/departments/addManager/:id                                 controllers.dean.DepartmentController.addManager(id)
GET         /dean/departments/removeManager/:id                              controllers.dean.DepartmentController.removeManager(id)

GET         /dean/rooms                                                      controllers.dean.RoomsController.roomsList()
POST        /dean/rooms/insert                                               controllers.dean.RoomsController.addRoom()
POST        /dean/rooms/update/:id                                           controllers.dean.RoomsController.saveRoom(id)
GET         /dean/rooms/updateRoomForm/:id                                   controllers.dean.RoomsController.getRoomEditForm(id)
GET         /dean/rooms/remove/:id                                           controllers.dean.RoomsController.removeRoom(id)

GET         /dean/student                                                    controllers.dean.StudentSearchController.searchStudent()
GET         /dean/student/list                                               controllers.dean.StudentSearchController.searchStudentRender()

GET         /dean/student/schedule                                           controllers.dean.ScheduleController.openSchedule()
GET         /dean/student/schedule/form                                      controllers.dean.ScheduleController.getScheduleForm()
GET         /dean/student/schedule/table                                     controllers.dean.ScheduleController.getShowTable()
POST        /dean/student/schedule/insert                                    controllers.dean.ScheduleController.addScheduleItem()
GET         /dean/student/schedule/save/:id                                  controllers.dean.ScheduleController.saveScheduleItem(id)


GET         /dean/lookAndFeel                                                controllers.dean.ProfileController.openLookAndFeel()
GET         /dean/profile/:id                                                controllers.dean.ProfileController.profileInit(id)
POST        /dean/updateProfile                                              controllers.dean.ProfileController.updateProfile()

GET         /picture/:name                                                   controllers.Application.picture(name: String)
#################################################################################################################

POST        /department/updateProfile                                        controllers.DepartmentController.updateProfile()
GET         /department/lookAndFeel                                          controllers.DepartmentController.openLookAndFeel()
GET         /department/profile/:id                                          controllers.DepartmentController.profileInit(id)

GET         /department/teachers                                             controllers.DepartmentController.teacherList()
POST        /department/teachers/insert                                      controllers.DepartmentController.addTeacher()
GET         /department/teachers/updateTeacherForm/:id                       controllers.DepartmentController.getTeacherEditForm(id)
POST        /department/teachers/saveTeacher/:id                             controllers.DepartmentController.saveTeacher(id)
GET         /department/teachers/remove/:id                                  controllers.DepartmentController.removeTeacher(id)

GET         /department/groups/                                              controllers.DepartmentController.groupList()
POST        /department/groups/insert                                        controllers.DepartmentController.addGroup()
GET         /department/groups/remove/:id                                    controllers.DepartmentController.removeGroup(id)
GET         /department/groups/update/:id                                    controllers.DepartmentController.saveGroup(id)
GET         /department/groups/:id                                           controllers.DepartmentController.groupDetails(id)
POST        /department/groups/student/insert/:id                            controllers.DepartmentController.addStudent(id)
GET         /department/groups/student/remove/:groupId/:id                   controllers.DepartmentController.removeStudent(id, groupId)
POST        /department/groups/student/save/:groupId/:id                     controllers.DepartmentController.saveStudent(id, groupId)
GET         /department/groups/student/updateStudentForm/:groupId/:id        controllers.DepartmentController.getStudentEditForm(id, groupId)

GET         /department/plans                                                controllers.DepartmentController.planGroupList()
GET         /department/plans/:id                                            controllers.DepartmentController.planList(id)
POST        /department/plans/:id/insert                                     controllers.DepartmentController.addSubject(id)
POST        /department/plans/update/:id                                     controllers.DepartmentController.saveSubject(id)
GET         /department/plans/:groupId/remove/:id                            controllers.DepartmentController.removeSubject(id, groupId)
GET         /department/plans/updateStudentForm/:id                          controllers.DepartmentController.getSubjectEditForm(id)


GET         /student/profile/:id                                             controllers.StudentController.profileInit(id)
GET         /student/shedule                                                 controllers.StudentController.viewSchedule()
GET         /student/lookAndFeel                                             controllers.StudentController.openLookAndFeel()
POST        /student/updateProfile                                           controllers.StudentController.updateProfile()

GET         /teacher/profile/:id                                             controllers.TeacherController.profileInit(id)
GET         /teacher/shedule                                                 controllers.TeacherController.viewSchedule()
GET         /teacher/lookAndFeel                                             controllers.TeacherController.openLookAndFeel()
POST        /teacher/updateProfile                                           controllers.TeacherController.updateProfile()
GET         /teacher/schedule/table                                          controllers.TeacherController.getShowTable()

GET         /feed                                                            controllers.FeedController.openFeed()
GET         /feed/insert                                                     controllers.FeedController.addFeed()
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                                    controllers.Assets.at(path="/public", file)

