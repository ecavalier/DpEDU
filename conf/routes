# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                 controllers.Application.index
GET         /login                                            controllers.LoginController.login
GET         /logout                                           controllers.LoginController.logOut
GET         /admin/profile                                    controllers.LoginController.authenticate




GET         /dean/lookAndFeel                                 controllers.DeanController.openLookAndFeel()
GET         /dean/departments                                 controllers.DeanController.departmentList()
POST        /dean/departments/insert                          controllers.DeanController.insertDepartment()
GET         /dean/departments/remove/:id                      controllers.DeanController.deleteDepartment(id)
GET         /dean/departments/update/:id                      controllers.DeanController.saveDepartment(id)
GET         /dean/departments/updateDepartmentForm/:id        controllers.DeanController.getDepartmentEditForm(id)
GET         /dean/departments/updateManagerForm/:id           controllers.DeanController.getManagerEditForm(id)
POST        /dean/departments/saveManager/:id                 controllers.DeanController.saveManager(id)
GET         /dean/departments/deatils/:id                     controllers.DeanController.detailsDepartment(id)
POST        /dean/departments/addManager/:id                  controllers.DeanController.addManager(id)
GET         /dean/departments/removeManager/:id               controllers.DeanController.removeManager(id)
GET         /dean/rooms                                       controllers.DeanController.roomsList()
POST        /dean/rooms/insert                                controllers.DeanController.addRoom()
POST        /dean/rooms/update/:id                            controllers.DeanController.saveRoom(id)
GET         /dean/rooms/updateRoomForm/:id                    controllers.DeanController.getRoomEditForm(id)
GET         /dean/rooms/remove/:id                   controllers.DeanController.removeRoom(id)
GET         /dean/theme/:theme                                controllers.DeanController.changeTheme(theme)
GET         /dean/profile/:id                                 controllers.DeanController.profileInit(id)
GET         /dean/profile                                     controllers.DeanController.profileRedirectImpl()
POST        /dean/updateProfile                               controllers.DeanController.updateProfile()
GET         /picture/:name                                    controllers.DeanController.picture(name: String)

GET         /department/lookAndFeel                           controllers.DepartmentController.openLookAndFeel()
GET         /department/theme/:theme                          controllers.DepartmentController.changeTheme(theme)
GET         /department/profile/:id                           controllers.DepartmentController.profileInit(id)
GET         /department/profile                               controllers.DepartmentController.profileRedirectImpl()
GET         /department/groups/                               controllers.DepartmentController.groupList()
POST        /department/groups/insert                         controllers.DepartmentController.insertDepartment()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                     controllers.Assets.at(path="/public", file)

